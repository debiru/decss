---
import Link from '/src/components/Link.astro';
import Util from '/src/config/Util';
import { args } from '/src/config/view';
---

<div class="content-inner">
  <div class="section lv-1">
    <div class="sectionHeader">
      <h1>{ (args.titlePrefix && Util.sprintf('%s - %s', args.titlePrefix, args.siteName)) || args.title }</h1>
    </div>
    <div class="sectionBody">
      <div class="sectionChild main-header">
        <p class="hatena-bookmark">
          <a href={ `https://b.hatena.ne.jp/entry/s/${args.siteRootUrlWithoutProtocol}` } class="hatena-bookmark-button" data-hatena-bookmark-layout="vertical-normal" data-hatena-bookmark-lang="ja" title="このエントリーをはてなブックマークに追加"><img src="https://b.st-hatena.com/images/v4/public/entry-button/button-only@2x.png" alt="このエントリーをはてなブックマークに追加" width="20" height="20" style="border: none;"></a><script src="https://b.st-hatena.com/js/bookmark_button.js" async="async"></script>
        </p>
        <dl class="headerInfo">
          <div class="di">
            <dt>文責</dt>
            <dd><Link url="https://twitter.com/debiru_R" label="@debiru_R" /></dd>
          </div>
          <div class="di">
            <dt>作成日</dt>
            <dd>2025年2月2日</dd>
          </div>
        </dl>
        <p class="keywords"><em>Keywords: </em>{ args.keywords.map((keyword, idx) => <Fragment>{ idx > 0 && ', ' }<span class="wbr">{ keyword }</span></Fragment>) }</p>
      </div>
      <div class="sectionSibling"><slot /></div>
    </div>
  </div>
</div>
